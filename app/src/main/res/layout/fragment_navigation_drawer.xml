<org.lucasr.dspec.DesignSpecFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:designSpec="@raw/spec">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.example.android.materialdesign.NavigationDrawerFragment"
                    android:background="#DADADA">

        <LinearLayout
                android:id="@+id/containerDrawerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FB8C00">

            <ImageView
                    android:id="@+id/drawerImage"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_width="280dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_abstract"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/drawerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/containerDrawerImage">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</org.lucasr.dspec.DesignSpecFrameLayout>